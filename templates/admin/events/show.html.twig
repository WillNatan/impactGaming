{% extends 'admin/base.html.twig' %}

{% block title %}{{ event.name }}
{% endblock %}

{% block body %}
	<div class="card shadow mb-4">
		<div class="card-header py-3 d-flex justify-content-between">
			<h6 class="m-0 font-weight-bold text-primary">{{ event.name }}</h6>

		</div>
		<div class="card-body">
			<div class="table-responsive">
                <table class="table">
				<tbody>
					<tr>
						<th>Ev√®nement</th>
						<td>{{ event.name }}</td>
					</tr>
					<tr>
						<th>Lien de site web</th>
						<td><a href="{{ event.websiteLink }}">{{ event.websiteLink }}</a></td>
					</tr>
					<tr>
						<th>Lieu</th>
						<td>{{ event.place }}</td>
					</tr>
					<tr>
						<th>Date de lancement</th>
						<td>{{ event.launchDate ? event.launchDate|date('d/m/Y') : '' }}</td>
					</tr>
					<tr>
						<th>Date de fin</th>
						<td>{{ event.stopDate ? event.stopDate|date('d/m/Y') : '' }}</td>
					</tr>
					<tr>
						<th>Description</th>
						<td>{{ event.description }}</td>
					</tr>
					<tr>
						<th>Prix du ticket</th>
						<td>{{ event.price }}</td>
					</tr>
				</tbody>
			</table>
            </div>
			<div class="d-flex flex-wrap">
				<a href="{{ path('events_index') }}" class="btn btn-info"><i class="fa fa-arrow-left"></i></a>

				<a href="{{ path('events_edit', {'id': event.id}) }}" class="btn btn-warning ml-1"><i class="fa fa-edit"></i></a>

				{{ include('admin/events/_delete_form.html.twig') }}
			</div>
		</div>
	</div>


{% endblock %}
